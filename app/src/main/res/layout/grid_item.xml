<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardCornerRadius="16dp"
    android:layout_marginLeft="@dimen/card_margin_side"
    android:layout_marginRight="@dimen/card_margin_side"
    card_view:cardElevation="0.01dp"
    android:layout_marginBottom="@dimen/card_margin_bottom">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/book_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/default_placeholder"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:paddingTop="@dimen/dimen_8dp"
            android:paddingBottom="@dimen/dimen_8dp"
            android:gravity="center"
            android:background="@drawable/round_bottom_angles"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/book_thumbnail"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>


